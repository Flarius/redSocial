<div class="card">
   <div class="card-header bg-dark">
      <h3 class="card-title text-white">
         <i class="fa fa-image"></i> subir imagenes
      </h3>
   </div>
   <div class="card-body">
      <form action="/images" method="POST" enctype="multipart/form-data">
         <div class="form-group">
            <div class="input-group">
               <div class="custom-file">
                  <input type="file" name="image" id="inputGroup" aria-describedby="inputGroupFileAddon" required>
               </div>
            </div>    
         </div>
         <div class="form-group">
            <input type="text" name="titulo" id="" class="form-control" placeholder="Titulo para la imagen">
         </div>
         <div class="form-group">
            <textarea name="descripcion" id="" rows="2" class="form-control" placeholder="Descripcion para la imagen" required></textarea>
         </div>
         <div class="form-group">
            <button class="btn btn-success">
               <i class="fa fa-upload"></i> subir imagen 
            </button>
         </div>
      </form>
   </div>
</div>
<div class="card mt-2">
   <div class="card-header bg-dark text-white">
      <h3><i class="fa fa-images"></i>Subido recientemente</h3>
   </div>
   <div class="card-body">
      <div class="row">
      {{#each images}}
         <div class="col-md-4">
            <a href="/images/{{uniqueId}}">
               <img src="/public/upload/{{fileName}}" alt=""  class="w-100 h-100 img-thumbnail">
            </a>
         </div>
      {{/each}}
      </div>
   </div>
</div>
